:css
  * {
  -webkit-transition: color 0.2s ease-in, background 0.1s ease-in;
  -moz-transition: color 0.2s ease-in, background 0.2s ease-in;
  -ms-transition: color 0.2s ease-in, background 0.2s ease-in;
  -o-transition: color 0.2s ease-in, background 0.2s ease-in;
  transition: color 0.2s ease-in, background 0.2s ease-in;
  }
  html, body { width: 100%; height: 100%; }
  body {
  background-color: #EDEDED;
  margin: 0;
  font-family: "OpenSans", Helvetica, Arial, sans-serif;
  }

  .cont { padding: 40px; min-height: 100%; width: 100%; text-align: center; display: flex; align-items: center; box-sizing: border-box;}
  .cont > div { margin: auto; }

  a { color: #92BC61; text-decoration: none; font-weight: 700; }
  a:hover { text-decoration: none; color: #757575;}

  h1 { color: #92BC61; letter-spacing: -1px; line-height: 60px; font-size: 60px; font-weight: 800; margin: 0px 0 50px 0; text-shadow: 0 1px 0 #fff; text-align: center;}
  p { color: rgba(0, 0, 0, 0.5); margin: 20px 0; line-height: 1.6; }

  ul { list-style: none; margin: 25px 0; padding: 0; }
  li { display: table-cell; font-weight: bold; width: 1%; }

  #suggestions {
  margin-top: 35px;
  color: #ccc;
  }
  #suggestions a {
  color: #aeaeae;
  font-weight: 300;
  font-size: 14px;
  margin: 0 10px;
  }
  #suggestions a:hover { text-decoration: none; color: #757575;}
  strong { font-weight: 700; }

