          %li
            %a{class: :tooltipped, :'data-tooltip' => '04:20', :'data-position' => 'top'} Exemples d'utilisation
          %li
            %a{class: :tooltipped, :'data-tooltip' => '06:10', :'data-position' => 'top'} Pour aller plus loin
    .row.last-call
      %hr
      .col.s12.center
        %p Alors, convaincu ?
        %a{href: page_path('download'), class: :'waves-effect waves-light btn btn-flat btn-large light-green btn-background-green white-text'}
          je t&eacute;l&eacute;charge hobbes
