- provide :title, "Inscription"
- provide :background, "light-green-bg nav-off footer-off"

.container
  %br
  .row
    .col.s12.m6.offset-m3.z-depth-1.white
      .sign-in-card
        .center.logo
          = logo_link_to_root "responsive-img"
          %h4.light-green-text.darken-1 Inscription
          %h6.grey-text Hobbes &middot; Acc&egrave;s &agrave; la communaut&eacute;
        %br

        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          .row.form-inputs
            = f.error_notification
            .row
              .col.s12
                = f.input :email, required: true, autofocus: true
            .row
              .col.s12
                = f.input :password, required: true #, hint: ("#{@minimum_password_length} characters minimum" if @validatable)
            .row
              .col.s12
                = f.input :password_confirmation, required: true
          .row.form-actions
            .col.s12
              = link_to "#", class: :'submit btn btn-flat btn-large white-text brown col s12 btn-background-brown waves-effect waves-light', 'data-id' => 'new_user' do
                Inscription
                %i.mdi-content-send
              = button_tag(type: 'submit', class: "submit btn btn-flat btn-large white-text brown col s12 btn-background-brown") do
                Inscription
                %i.mdi-content-send

          .row
            .col
              = render "devise/shared/links"
